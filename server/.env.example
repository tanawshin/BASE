# ================================================
# BASE Events - Server Environment Configuration
# ================================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Server Configuration
NODE_ENV=development
PORT=5000

# Domain Configuration (Update after domain purchase)
DOMAIN_URL=https://cssentialserver.com
API_URL=https://cssentialserver.com/api
CORS_ORIGIN=https://cssentialserver.com

# Database Configuration (PostgreSQL recommended for production)
# Use strong, unique passwords in production!
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=base_events
DB_USER=base_admin
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# For development/testing only (SQLite)
# DB_TYPE=sqlite
# DB_PATH=./data/base_events.db

# JWT Configuration
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_AT_LEAST_64_CHARS
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for contact forms)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
CONTACT_EMAIL=contact@base-events.com

# Social Media Links
FACEBOOK_URL=https://facebook.com/BASE-Events
INSTAGRAM_URL=https://instagram.com/base_events
LINKEDIN_URL=https://linkedin.com/company/base-events
TWITTER_URL=https://twitter.com/base_events

# Google Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_BUSINESS_URL=https://g.page/base-events
